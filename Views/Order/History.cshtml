@{
    ViewData["Title"] = "Lịch sử mua hàng";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3" style="background-color: #5D4037; color: white; border-radius: 15px;">
                <div class="text-center mb-3">
                    <img src="https://ui-avatars.com/api/?name=User&background=D7CCC8&color=5D4037" class="rounded-circle shadow-sm" width="80">
                    <h5 class="mt-2">Khách hàng mẫu</h5>
                    <p class="small">Thành viên thân thiết</p>
                </div>
                <hr style="border-color: #D7CCC8;">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white p-0" href="#"><i class="bi bi-person me-2"></i> Thông tin cá nhân</a>
                    </li>
                    <li class="nav-item mb-2">
                        <a class="nav-link text-white p-0 fw-bold" href="#"><i class="bi bi-clock-history me-2"></i> Lịch sử đơn hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white p-0" href="#"><i class="bi bi-box-arrow-right me-2"></i> Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-9">
            <h3 class="mb-4" style="color: #5D4037;">Đơn hàng của bạn</h3>
            
            <div class="card shadow-sm border-0 mb-3 transition-hover" style="border-radius: 12px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="fw-bold">Mã đơn: #ORD-9921</span>
                            <span class="text-muted ms-3">Ngày đặt: 30/01/2026</span>
                        </div>
                        <span class="badge bg-warning text-dark">Đang giao hàng</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://via.placeholder.com/60" class="rounded me-3">
                        <div>
                            <p class="mb-0 fw-bold">Trà sữa Matcha + 1 Topping</p>
                            <small class="text-muted">Số lượng: 02</small>
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <span class="text-muted small">Tổng thanh toán:</span>
                            <span class="text-danger fw-bold fs-5 ms-2">110,000đ</span>
                        </div>
                        <button class="btn btn-sm btn-outline-brown" style="border-color: #5D4037; color: #5D4037;">Xem chi tiết</button>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-3 transition-hover" style="border-radius: 12px;">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="fw-bold">Mã đơn: #ORD-8850</span>
                            <span class="text-muted ms-3">Ngày đặt: 25/01/2026</span>
                        </div>
                        <span class="badge bg-success">Đã hoàn thành</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <img src="https://via.placeholder.com/60" class="rounded me-3">
                        <div>
                            <p class="mb-0 fw-bold">Combo Cafe Muối & Bánh Ngọt</p>
                            <small class="text-muted">Số lượng: 01</small>
                        </div>
                    </div>
                    <hr class="my-2">
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div>
                            <span class="text-muted small">Tổng thanh toán:</span>
                            <span class="text-danger fw-bold fs-5 ms-2">85,000đ</span>
                        </div>
                        <button class="btn btn-sm btn-outline-brown" style="border-color: #5D4037; color: #5D4037;">Xem chi tiết</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-outline-brown:hover {
        background-color: #5D4037;
        color: white !important;
    }
</style>