<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 shadow-sm p-4 rounded-3 border">
            <h2 class="text-center mb-4">Đăng Nhập</h2>
            <form>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control">
                </div>
                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <input type="password" class="form-control">
                </div>
                <div class="d-grid mb-3">
                    <button type="button" class="btn btn-dark">Đăng Nhập</button>
                </div>
                <div class="text-center">
                    <button type="button" class="btn btn-outline-danger w-100 mb-2">
                         Đăng nhập bằng Google
                    </button>
                    <p>Chưa có tài khoản? <a asp-action="Register">Đăng ký</a></p>
                </div>
            </form>
        </div>
    </div>
</div>