@model IEnumerable<ASM_WebBanNuocUong.Models.Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Danh sách Nước uống</h2>
        <a asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Thêm món mới</a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Giá bán</th>
                <th>Chủ đề</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td><img src="@item.Image" style="width:60px; height:60px; object-fit:cover;" class="rounded shadow-sm"/></td>
                    <td class="fw-bold">@item.Name</td>
                    <td class="text-danger fw-bold">@item.Price.ToString("N0") VNĐ</td>
                    <td><span class="badge bg-info text-dark">@item.Theme</span></td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Xem</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>