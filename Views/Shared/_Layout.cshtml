<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASM_WebBanNuocUong</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASM_WebBanNuocUong.styles.css" asp-append-version="true" />
</head>
<style>
    /* 1. Tông màu chủ đạo */
    :root {
        --brown-dark: #5D4037; /* Nâu đậm */
        --brown-light: #D7CCC8; /* Be nhạt */
        --beige: #F5F5DC; /* Màu be sáng */
        --white: #FFFFFF;
    }

    body {
        background-color: var(--beige); /* Nền toàn trang màu be */
        color: var(--brown-dark);
    }

    /* 2. Hiệu ứng Hover cho nút bấm */
    .btn {
        transition: all 0.3s ease; /* Tạo hiệu ứng mượt mà */
        border-radius: 8px;
    }

    .btn:hover {
        transform: translateY(-3px); /* Nổi lên trên */
        box-shadow: 0 5px 15px rgba(93, 64, 55, 0.3); /* Đổ bóng màu nâu */
    }

    /* 3. Tùy chỉnh Navbar (Thanh menu) */
    .navbar {
        background-color: var(--brown-dark) !important;
    }
    
    .nav-link {
        color: var(--white) !important;
        position: relative;
    }

    .nav-link:after {
        content: '';
        position: absolute;
        width: 0; height: 2px;
        bottom: 0; left: 0;
        background-color: var(--brown-light);
        transition: 0.3s;
    }

    .nav-link:hover:after {
        width: 100%; /* Gạch chân chạy ngang khi hover */
    }

    /* 4. Hiệu ứng cho Card sản phẩm */
    .card {
        border: none;
        background-color: var(--white);
        transition: transform 0.4s;
    }

    .card:hover {
        transform: scale(1.05); /* Phóng to nhẹ khi rê chuột */
        border: 1px solid var(--brown-light);
    }

    /* 5. Nút bấm màu đặc trưng */
    .btn-primary {
        background-color: var(--brown-dark);
        border: none;
    }

    .btn-primary:hover {
        background-color: #3E2723; /* Nâu cháy khi hover */
    }
</style>
<body>
   <header>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DrinkStore Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Category" asp-action="Index">Quản lý Loại nước</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Product" asp-action="Index">Quản lý Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Combo" asp-action="Index">Quản lý Combo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Order" asp-action="Index">Quản lý Đơn hàng</a>
                    </li>
                    <ul class="navbar-nav">
                     <li class="nav-item">
    <a class="nav-link text-dark" asp-controller="Order" asp-action="History">Lịch sử mua hàng</a>
</li>
    <li class="nav-item">
        <a class="nav-link btn btn-outline-primary mx-1" asp-controller="Account" asp-action="Login">Đăng nhập</a>
    </li>
    <li class="nav-item">
        <a class="nav-link btn btn-primary text-white mx-1" asp-controller="Account" asp-action="Register">Đăng ký</a>
    </li>
   
</ul>
                </ul>
            </div>
        </div>
    </nav>
</header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - ASM_WebBanNuocUong - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
